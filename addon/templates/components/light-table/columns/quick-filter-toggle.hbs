{{#if tableActions.selectAllAction}}
    {{#if tableActions.customSelectAll}}
        <div style="margin-top:5px; display: inline-block; height:20px;">
            {{custom-checkbox checked=allChecked on-change=(action tableActions.selectAllAction allChecked) title="Select all on this page"}}
        </div>
    {{else}}
        <label>
            {{x-checkbox checked=allChecked on-change=(action tableActions.selectAllAction allChecked) title="Select all on this page"}}
        </label>
    {{/if}}
{{/if}}
{{#if tableActions.allowQuickSearch}}
  {{log tableActions}}
<a href="#" {{action 'toggleFilters' bubbles=false}} title="Toggle quick filters" class=" table-action-buttons" id="table-search-icon">
  <i class="fa fa-search"></i>
</a>
{{#if tableActions.searchHoverText}}
  {{#bs-popover triggerElement='#table-search-icon' triggerEvents="hover"}}{{tableActions.searchHoverText}}{{/bs-popover}}
{{/if}}
{{/if}}
